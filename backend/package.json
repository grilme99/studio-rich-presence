{
  "name": "studio-rich-presence-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "build": "npm run proto:generate && npm run cf-typegen",
    "cf-typegen": "wrangler types",
    "db:migrate:local": "wrangler d1 migrations apply studio-rich-presence-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply studio-rich-presence-db --remote",
    "proto:generate": "cd ../protos && buf generate",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.2.3",
    "hono": "^4.6.20"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.47.2",
    "@bufbuild/protoc-gen-es": "^2.2.3",
    "@cloudflare/vitest-pool-workers": "^0.5.34",
    "@types/node": "22.13.0",
    "vitest": "^2.1.9",
    "wrangler": "^4.54.0"
  }
}